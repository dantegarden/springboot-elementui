<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dvt.elementui.repository.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.dvt.elementui.domain.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询结果封装-->
    <sql id="Base_Column_List">
        id, user_name, password
    </sql>

    <!--查询指定用户-->
    <select id="selectById" resultMap="BaseResultMap" parameterType="Integer">
        select
        <include refid="Base_Column_List"/>
        from users
        where id = #{id,jdbcType=INTEGER}
    </select>

    <!--查询所有-->
    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from users
    </select>

    <!--条件查询封装-->
    <sql id="Base_Where_List">
        <if test="userName != null  and userName != ''">
            and user_name = #{userName}
        </if>
    </sql>

    <!--分页查询-->
    <select id="getUserListByPage" resultMap="BaseResultMap" parameterType="com.dvt.elementui.repository.param.UserParam">
        select
        <include refid="Base_Column_List"/>
        from users
        where 1=1
        <include refid="Base_Where_List"/>
        order by id desc
        limit #{pageNumber} , #{pageSize}
    </select>

    <!--新增-->
    <insert id="insert" parameterType="com.dvt.elementui.domain.User">
        insert into users (id, user_name, password)
        values (#{id,jdbcType=INTEGER}, #{userName,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR})
    </insert>

    <!--更新-->
    <update id="updateById" parameterType="com.dvt.elementui.domain.User">
        update users
        set user_name = #{userName,jdbcType=VARCHAR},
          password = #{password,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <!--删除-->
    <delete id="deleteById" parameterType="Integer">
        delete from users
        where id = #{id,jdbcType=INTEGER}
    </delete>
</mapper>
